<%= simple_form_for(@store) do |f| %>
  <div class='row'>
    <div class='col-xs-12'>  

      <div class="form-group">
        <%= f.input :name , input_html: { placeholder: 'Nome da loja' } , label: 'Nome da loja' %>
      </div>

      <div class="form-group">
        <%= f.association :user , input_html: { placeholder: 'Proprietário' } , label: 'Proprietário', collection: User.get_just_owner, prompt: "Proprietário da loja", label_method: :full_name %>
      </div>
      <div class="form-group">
        <%= f.association :users , label: 'Selecione um ou mais vendedor', include_blank: false, input_html: {multiple: true} , label_method: :full_name , collection: User.get_sellers %>        
      </div>
    </div>
  </div>
  <div class="clearfix form-actions">
    <div class="col-md-12">
      <div class="pull-right">
        <%= f.button :submit , class: 'ace-icon fa fa-check bigger-110' %>
      </div>
    </div>
  </div>
<% end %>
