<div class="page-header">
  <h1>
    Lojas
    <small>
      <i class="ace-icon fa fa-angle-double-right"></i>
      Listagem
    </small>
  </h1>
</div>
<%= render 'shared/flash', flash: flash %>

<div class="row">
  <div class='col-xs-12'>
    <table class='datatable'>
      <thead>
        <tr>
          <th>Proprietário</th>
          <th>Nome da loja</th>
          <th>Vendedor(es)</th>
          <th>Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @stores.each do |store| %>
          <tr>
            <td><%= store.user.full_name %></td>
            <td><%= store.name %></td>
            <td>
              <% store.users.each do |user| %>
                <span class="label label-default"><%=user.full_name%></span>
              <% end %>
            </td>
            <td>
              <%= link_to '<span class="label label-warning label-white middle">Editar</span>'.html_safe, edit_store_path(store) %>
              <%= link_to '<span class="label label-success label-white middle">Deletar</span>'.html_safe, store, method: :delete, data: { confirm: 'Você tem certeza?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="clearfix form-actions">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to 'Nova loja', new_store_path , class: 'btn btn-primary' %>
    </div>
  </div>
</div>


