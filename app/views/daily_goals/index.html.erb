<p id="notice"><%= notice %></p>

<h1>Daily Goals</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>User</th>
      <th>Currently date</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_goals.each do |daily_goal| %>
      <tr>
        <td><%= daily_goal.goal_id %></td>
        <td><%= daily_goal.user_id %></td>
        <td><%= daily_goal.currently_date %></td>
        <td><%= daily_goal.value %></td>
        <td><%= link_to 'Show', daily_goal %></td>
        <td><%= link_to 'Edit', edit_daily_goal_path(daily_goal) %></td>
        <td><%= link_to 'Destroy', daily_goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

